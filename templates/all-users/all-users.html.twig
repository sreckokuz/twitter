{% extends 'base.html.twig' %}
    {% block left%}
        {% set markPage = 4 %}
        {{ include('post/main-left.html.twig') }}
    {% endblock %}
    {% block right %}
        {% set markPage = 4 %}
        {{ include('post/main-right.html.twig')}}
    {% endblock %}
{% block middle %}
    <div class="w3-container w3-card w3-white w3-round w3-margin" id="notification-box">
                <br>
                <center><span>All users:</span></center>
                <hr>
                <div class="row">
                    <div class="col-md-3">
                        <center><p>Picture</p></center><hr>
                    </div>
                    <div class="col-md-3">
                        <center><p>Username</p></center><hr>
                    </div>
                    <div class="col-md-3">
                        <center><p>Tweets</p></center><hr>
                    </div>
                    <div class="col-md-3">
                        <center><p>Status</p></center><hr>
                    </div>
                    {% for user in allUsers %}
                    <div class="col-md-3">
                       <center><img id="prof-pic" src="{{ asset("/images/profile2.jpg") }}" class="w3-circle" style="height:40px;width:40px" alt="Avatar"></p></center>
                    </div>
                    <div class="col-md-3">
                        <p class="w3-center">@{{ user.username }}</p>
                    </div>
                    <div class="col-md-3">
                        <p class="w3-center">{{ user.posts.count }}</p>
                    </div>
                    <div class="col-md-3">
                        {% if user != app.user %}
                            {% if user.followers.contains(app.user) == false %}
                                <center><a href="{{ path('follow_user', {'id': user.id}) }}" class="btn btn-lg btn-outline-primary" id="button-fol">Follow</a></center>
                            {% else %}
                                <center><a href="{{ path('unfollow_user', {'id': user.id}) }}" class="btn btn-lg btn-outline-danger" id="button-unf">Unfollow</a></center>
                            {% endif %}
                        {% else %}

                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
    </div>
{% endblock %}