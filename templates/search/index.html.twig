{% extends 'base.html.twig' %}
    {% block left%}
        {% set markPage = 5 %}
        {{ include('post/main-left.html.twig') }}
    {% endblock %}
    {% block right %}
        {% set markPage = 5 %}
        {{ include('post/main-right.html.twig')}}
    {% endblock %}
{% block middle %}
    <div class="w3-container w3-card w3-white w3-round w3-margin" id="notification-box">
        {% if searchedUsers | length > 0 %}
            {% for i in 0..(searchedUsers | length)-1 %}
                <br>
                <center><span>Search result:</span></center>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <center> <a href="{{ path("all_user_tweets", {'id': searchedUsers[i].id }) }}">{{   searchedUsers[i].fullName }}</a></center>
                    </div>
                    <div class="col-md-6">
                        <center>{{ searchedUsers[i].username }}</center>
                    </div>
                </div>
                <br>
            {% endfor %}
        {% else %}
            <br><br>
            <center>User not founded. Enter <span id="colorElement">full name</span> or <span id="colorElement">username</span> to find user</center>
        {% endif %}
    </div>
{% endblock %}